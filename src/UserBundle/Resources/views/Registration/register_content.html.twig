{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {% if form_errors(form.username) or form_errors(form.email) or form_errors(form.plainPassword.first) %}
        <div class="alert alert-danger error">
            {{form_errors(form.username)}}
            {{form_errors(form.email)}}
            {{form_errors(form.plainPassword.first)}}
        </div>
    {% endif%}

    <label class="registrationLabel">{{ form_label(form.nom) }}</label>
    {{ form_widget(form.nom) }}
    <label class="registrationLabel">{{ form_label(form.prenom) }}</label>
    {{ form_widget(form.prenom) }}
    <label class="registrationLabel">{{ form_label(form.adresse) }}</label>
    {{ form_widget(form.adresse) }}
    <label class="registrationLabel">{{ form_label(form.npa) }}</label>
    {{ form_widget(form.npa) }}
    <label class="registrationLabel">{{ form_label(form.localite) }}</label>
    {{ form_widget(form.localite) }}
    <label class="registrationLabel">{{ form_label(form.email) }}</label>
    {{ form_widget(form.email) }}
    <label class="registrationLabel">{{ form_label(form.username) }}</label>
    {{ form_widget(form.username) }}
    <label class="registrationLabel">{{ form_label(form.plainPassword.first) }}</label>
    {{ form_widget(form.plainPassword.first) }}
    <label class="registrationLabel">{{ form_label(form.plainPassword.second) }}</label>
    {{ form_widget(form.plainPassword.second) }}

    <div>
        <input  class="btn btn-success registrationLabel" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
</form>
